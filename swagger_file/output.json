swagger: '2.0'
info:
  title: Your API Title
  description: API description
  version: v1
host: 127.0.0.1:8000
schemes:
- http
basePath: /
consumes:
- application/json
produces:
- application/json
securityDefinitions:
  Basic:
    type: basic
security:
- Basic: []
paths:
  /accounts/api/login/:
    post:
      operationId: accounts_api_login_create
      description: ''
      parameters:
      - name: data
        in: body
        required: true
        schema:
          $ref: '#/definitions/CustomTokenObtainPair'
      responses:
        '201':
          description: ''
          schema:
            $ref: '#/definitions/CustomTokenObtainPair'
      tags:
      - accounts
    parameters: []
  /accounts/api/register/:
    post:
      operationId: accounts_api_register_create
      description: ''
      parameters:
      - name: data
        in: body
        required: true
        schema:
          $ref: '#/definitions/Register'
      responses:
        '201':
          description: ''
          schema:
            $ref: '#/definitions/Register'
      tags:
      - accounts
    parameters: []
  /accounts/api/token/refresh/:
    post:
      operationId: accounts_api_token_refresh_create
      description: |-
        Takes a refresh type JSON web token and returns an access type JSON web
        token if the refresh token is valid.
      parameters:
      - name: data
        in: body
        required: true
        schema:
          $ref: '#/definitions/TokenRefresh'
      responses:
        '201':
          description: ''
          schema:
            $ref: '#/definitions/TokenRefresh'
      tags:
      - accounts
    parameters: []
  /messages/messages/:
    get:
      operationId: messages_messages_list
      description: APIView برای نمایش لیست پیام‌ها و ارسال پیام جدید.
      parameters:
      - name: page
        in: query
        description: A page number within the paginated result set.
        required: false
        type: integer
      - name: page_size
        in: query
        description: Number of results to return per page.
        required: false
        type: integer
      responses:
        '200':
          description: ''
          schema:
            required:
            - count
            - results
            type: object
            properties:
              count:
                type: integer
              next:
                type: string
                format: uri
                x-nullable: true
              previous:
                type: string
                format: uri
                x-nullable: true
              results:
                type: array
                items:
                  $ref: '#/definitions/Message'
      tags:
      - messages
    post:
      operationId: messages_messages_create
      description: APIView برای نمایش لیست پیام‌ها و ارسال پیام جدید.
      parameters:
      - name: data
        in: body
        required: true
        schema:
          $ref: '#/definitions/Message'
      responses:
        '201':
          description: ''
          schema:
            $ref: '#/definitions/Message'
      tags:
      - messages
    parameters: []
  /messages/messages/send/:
    post:
      operationId: messages_messages_send_create
      description: ارسال پیام به کاربر مشخص شده.
      parameters:
      - name: data
        in: body
        required: true
        schema:
          $ref: '#/definitions/Message'
      responses:
        '201':
          description: ''
          schema:
            $ref: '#/definitions/Message'
        '400':
          description: Bad Request
        '404':
          description: User not found.
      tags:
      - messages
    parameters: []
  /messages/messages/user/{username}/delete_all/:
    delete:
      operationId: messages_messages_user_delete_all_delete
      description: حذف همه پیام‌های بین شما و کاربر مشخص شده.
      parameters:
      - name: username
        in: path
        description: نام کاربری کاربر مورد نظر
        type: string
        required: true
      responses:
        '204':
          description: No Content
        '404':
          description: User not found.
      tags:
      - messages
    parameters:
    - name: username
      in: path
      required: true
      type: string
  /messages/messages/user/{username}/delete_sent/:
    delete:
      operationId: messages_messages_user_delete_sent_delete
      description: حذف پیام‌هایی که توسط شما به کاربر مشخص شده ارسال شده‌اند.
      parameters:
      - name: username
        in: path
        description: نام کاربری کاربر مورد نظر
        type: string
        required: true
      responses:
        '204':
          description: No Content
        '404':
          description: User not found.
      tags:
      - messages
    parameters:
    - name: username
      in: path
      required: true
      type: string
  /messages/messages/user/{username}/history/:
    get:
      operationId: messages_messages_user_history_list
      description: APIView برای نمایش تاریخچه پیام‌های ارسال شده و دریافت شده با یک
        کاربر مشخص.
      parameters:
      - name: page
        in: query
        description: A page number within the paginated result set.
        required: false
        type: integer
      - name: page_size
        in: query
        description: Number of results to return per page.
        required: false
        type: integer
      responses:
        '200':
          description: ''
          schema:
            required:
            - count
            - results
            type: object
            properties:
              count:
                type: integer
              next:
                type: string
                format: uri
                x-nullable: true
              previous:
                type: string
                format: uri
                x-nullable: true
              results:
                type: array
                items:
                  $ref: '#/definitions/Message'
      tags:
      - messages
    parameters:
    - name: username
      in: path
      required: true
      type: string
  /messages/messages/users/:
    get:
      operationId: messages_messages_users_list
      description: لیست کردن همه کاربران که با آنها پیام داده یا دریافت کرده‌اید.
      parameters: []
      responses:
        '200':
          description: ''
          schema:
            type: array
            items:
              $ref: '#/definitions/User'
      tags:
      - messages
    parameters: []
  /messages/messages/{id}/:
    get:
      operationId: messages_messages_read
      description: مشاهده جزئیات یک پیام خاص و علامت‌گذاری آن به عنوان خوانده شده.
      parameters: []
      responses:
        '200':
          description: ''
          schema:
            $ref: '#/definitions/Message'
        '404':
          description: Not found.
      tags:
      - messages
    delete:
      operationId: messages_messages_delete
      description: حذف یک پیام خاص که توسط شما ارسال شده است.
      parameters: []
      responses:
        '204':
          description: No Content
        '403':
          description: Forbidden
        '404':
          description: Not found.
      tags:
      - messages
    parameters:
    - name: id
      in: path
      required: true
      type: string
definitions:
  CustomTokenObtainPair:
    required:
    - username_or_email
    - password
    type: object
    properties:
      username_or_email:
        title: Username or email
        type: string
        minLength: 1
      password:
        title: Password
        type: string
        minLength: 1
  Profile:
    type: object
    properties:
      first_name:
        title: First name
        type: string
        maxLength: 30
        x-nullable: true
      last_name:
        title: Last name
        type: string
        maxLength: 30
        x-nullable: true
      photo:
        title: Photo
        type: string
        readOnly: true
        x-nullable: true
        format: uri
  Register:
    required:
    - username
    - password
    - profile
    - email
    type: object
    properties:
      username:
        title: Username
        type: string
        maxLength: 150
        minLength: 1
      password:
        title: Password
        type: string
        maxLength: 128
        minLength: 1
      profile:
        $ref: '#/definitions/Profile'
      email:
        title: Email
        type: string
        format: email
        maxLength: 254
        minLength: 1
  TokenRefresh:
    required:
    - refresh
    type: object
    properties:
      refresh:
        title: Refresh
        type: string
        minLength: 1
      access:
        title: Access
        type: string
        readOnly: true
        minLength: 1
  User:
    required:
    - username
    type: object
    properties:
      id:
        title: ID
        type: integer
        readOnly: true
      username:
        title: Username
        type: string
        maxLength: 150
        minLength: 1
  Message:
    required:
    - recipient
    - content
    type: object
    properties:
      id:
        title: ID
        type: integer
        readOnly: true
      sender:
        $ref: '#/definitions/User'
      recipient:
        title: Recipient
        description: نام کاربری دریافت‌کننده پیام
        type: string
      content:
        title: Content
        description: متن پیام
        type: string
        minLength: 1
      timestamp:
        title: Timestamp
        type: string
        format: date-time
        readOnly: true
      is_read:
        title: Is read
        type: boolean
        readOnly: true
